{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "2020 Tokyo Summer Olympic Total Medals by Country",
    "color": "navy",
    "fontSize": 22,
    "align": "center",
    "anchor": "middle",
    "dy": -1,
    "baseline": "middle",
    "subtitleColor": "navy",
    "subtitleFontSize": 18,
    "subtitlePadding": 5
  },
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/acho0068/fit3179assignment2/main/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer":[
    {
      "transform": [
            {
              "calculate": "datum.properties.NAME + ' did not participate / win any medals'",
              "as": "note"
            }
          ],
          "mark": { "type": "geoshape", "fill": "lightgray" },
          "encoding": { "tooltip": { "field": "note" } }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/acho0068/fit3179assignment2/main/js/oceans.topojson",
            "format": { "type": "topojson", "feature": "oceans" }
          },
          "mark": { "type": "geoshape", "fill": "skyblue" }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/acho0068/fit3179assignment2/main/js/WorldMapWithGraticules.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
          },
          "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
        },
    {
     "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/acho0068/fit3179assignment2/main/dataset/clean/total_medals_by_countries.csv"
        },
        "key": "Country",
        "fields": ["Total_Medals"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Number of Medals"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Total_Medals",
      "title": "Number of Medals",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [20, 40, 60, 80, 100],
        "range": ["#fee5d9", "#fcae91", "#fc9272","#fb6a4a", "#de2d26", "#a50f15"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Total_Medals", "type": "quantitative", "title": "Number of Medal(s)"}
    ]
  }
}
],
"config":{}
}
